Algoritmo Perfeito;
Variaveis
    i, soma, n: Inteiro;
Inicio
    Escreva("Entre com um numero para descobrir se ele e perfeito: ")
    Leia(n);
    soma( <- 0;
    i <- 1;
    Enquato soma < n Faca
        Se Resto(n, i) == 0 Entao
            soma <- soma + i;
        i <- i + 1;
    FimEnquanto
    Se soma == n Entao
        Escreva("O numero " + n + " é uma numero perfeito");
    Senao
        Escreva("O numero " + n + " nao é uma numero perfeito");
Fim.