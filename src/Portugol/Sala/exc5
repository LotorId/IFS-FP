Algoritmo aumento;
Variaveis
	salario, nsalario : Real;
Inicio
	Escreva("Entre com o salário: ");
	Leia(salario);
	Se (salario <= 300) Entao
	Inicio
	    nsalario <- (salario + (15 * salario / 100));
	    Escreva("O novo salário do funcionário é: R$" + nsalario);
	FimSe
	Senao
	Inicio
	    Se ((salario > 300) e (salario <= 600)) Entao
	    Inicio
		nsalario <- (salario + (10 * salario / 100));
	        Escreva("O novo salário do funcionário é: R$" + nsalario);
	    FimSe
	    Senao
	    Inicio
		    Se ((salario > 600 e (salario <= 900)) Entao
		    Inicio
		        nsalario <- (salario + (5 * salario / 100));
		        Escreva("O novo salário do funcionário é: R$" + nsalario);
		    FimSe
		    Senao
		        Escreva("O salário recebido é acima de 900 e não está apto a um aumento");
	    FimSenao
	FimSenao
Fim.